	$('#new-product').bootstrapValidator({
        err: {
            container: 'tooltip'
        },
        fields: {
            name: {
                validators: {
                    notEmpty: {
                        message: 'The name is required and cannot be empty'
                    },
                    stringLength: {
                        min: 3,
